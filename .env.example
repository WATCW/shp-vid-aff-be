# Database
MONGODB_URI=mongodb://localhost:27017/shopee-video-gen
REDIS_URL=redis://localhost:6379
RABBITMQ_URL=amqp://localhost:5672

# AI API Keys (Choose one or both)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Image Services (Optional - for fallback images)
PEXELS_API_KEY=

# AI Model Selection
AI_PROVIDER=openai
# Options: 'openai' or 'anthropic'
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Storage
STORAGE_PATH=./storage/videos
UPLOAD_PATH=./storage/uploads
MAX_FILE_SIZE=104857600
# 100MB in bytes

# Server
PORT=8000
HOST=0.0.0.0
NODE_ENV=development
CORS_ORIGIN=*
# Production: Set to your frontend URL (e.g., https://your-frontend.vercel.app)
# Multiple origins: https://domain1.com,https://domain2.com
# Development: * (allow all)

# Queue Config
QUEUE_CONCURRENCY=3

# Logging
LOG_LEVEL=info
# Options: 'trace', 'debug', 'info', 'warn', 'error', 'fatal'
