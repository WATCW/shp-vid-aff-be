{
  "name": "shopee-video-generator-backend",
  "version": "1.0.0",
  "description": "Shopee Video Affiliate Generator - Backend API & Worker",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"API,WORKER\" -c \"cyan,magenta\" \"bun --watch src/index.ts\" \"bun --watch src/worker.ts\"",
    "dev:api": "bun --watch src/index.ts",
    "dev:worker": "bun --watch src/worker.ts",
    "start": "concurrently -n \"API,WORKER\" -c \"cyan,magenta\" \"bun src/index.ts\" \"bun src/worker.ts\"",
    "start:api": "bun src/index.ts",
    "start:worker": "bun src/worker.ts",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "db:seed": "bun src/scripts/seed.ts",
    "db:reset": "bun src/scripts/reset-db.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/static": "^1.1.1",
    "@elysiajs/swagger": "^1.1.5",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "amqplib": "^0.10.9",
    "bullmq": "^5.26.2",
    "concurrently": "^9.2.1",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "elysia": "^1.1.23",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^144.0.0",
    "ioredis": "^5.4.2",
    "mongoose": "^8.8.4",
    "nanoid": "^5.0.9",
    "openai": "^4.77.3",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.49.1",
    "sharp": "^0.33.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/bun": "latest",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2"
  }
}
