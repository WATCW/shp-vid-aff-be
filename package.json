{
  "name": "shopee-video-generator-backend",
  "version": "1.0.0",
  "description": "Shopee Video Affiliate Generator - Backend API & Worker",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"API,WORKER\" -c \"cyan,magenta\" \"bun --watch src/index.ts\" \"bun --watch src/worker.ts\"",
    "dev:api": "bun --watch src/index.ts",
    "dev:worker": "bun --watch src/worker.ts",
    "start": "concurrently -n \"API,WORKER\" -c \"cyan,magenta\" \"bun src/index.ts\" \"bun src/worker.ts\"",
    "start:api": "bun src/index.ts",
    "start:worker": "bun src/worker.ts",
    "test": "bun test",
    "db:init": "bun src/scripts/init-data.ts",
    "db:seed": "bun src/scripts/seed.ts",
    "db:seed:templates": "bun src/scripts/seed-templates.ts",
    "db:seed:music": "bun src/scripts/seed-music.ts",
    "db:reset": "bun src/scripts/reset-db.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@elysiajs/static": "^1.1.1",
    "@elysiajs/swagger": "^1.1.5",
    "amqplib": "^0.10.9",
    "axios": "^1.13.1",
    "concurrently": "^9.2.1",
    "csv-parse": "^5.6.0",
    "elysia": "^1.1.23",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "ioredis": "^5.4.2",
    "mongoose": "^8.8.4",
    "nanoid": "^5.0.9",
    "openai": "^4.77.3",
    "pino": "^9.5.0",
    "sharp": "^0.33.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/bun": "latest",
    "@types/fluent-ffmpeg": "^2.1.27",
    "typescript": "^5.7.2"
  }
}
